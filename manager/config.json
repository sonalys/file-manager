{
  "log_level": "info",
  "mounts": {
    "0": "./storage"
  },
  "scripts": {
    "compress2heic": {
      "image": "file-manager/imagemagick",
      "version": "v0.0.1",
      "parameters": ["convert", "-quality", "65", "/buffer/%filename.%extension", "/buffer/%filename.heic"],
      "binary": "docker",
      "timeout": "5s"
    }
  },
  "rules": [
    {
      "match": {
        "filename": ".*\\.(jpg|jpeg|bmp|png)"
      },
      "pipeline": ["compress2heic"]
    }
  ]
}
